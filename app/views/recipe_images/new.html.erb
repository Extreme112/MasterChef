      <ul>
        <% @recipe_image.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<%= form_for(@recipe_image,html: {multipart: true}) do |f| %>
    <p>Select Image</p>
    <div class="form-group">
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.text_field :image_name %>
    </div>

    <%= hidden_field_tag 'recipe_id', @recipe_id%>
    <%= f.submit 'Save',{class: 'btn btn-primary'}   %>

<% end %>
