<div class="container">
  <div class="row">
    <!--Display the new recipes-->
    <div class="col-lg-4">
      <h2>New Recipes</h2>
      <% listOfRecipes = Recipe.last(3) %>
      <% listOfRecipes.each do |recipe| %>
          <a href="<%= recipe_path(recipe) %>" class="thumbnail">
            <% if !recipe.image.blank? %>
                <%= image_tag recipe.image_url(:thumb).to_s %>
            <% else %>
                <%= image_tag '/recipePlaceholder.jpg', style: 'height:50px; width:50px'%>
            <% end %>
            <%= recipe.recipe_name %>
          </a>
      <% end %>
    </div>
    <div class="col-lg-4">
      <h2>Try These</h2>
      <% listOfRecipes = Recipe.order("RANDOM()").limit(3) %>
      <% listOfRecipes.each do |recipe| %>
          <a href="<%= recipe_path(recipe) %>" class="thumbnail">
            <% if !recipe.image.blank? %>
                <%= image_tag recipe.image_url(:thumb).to_s %>
            <% else %>
                <%= image_tag '/recipePlaceholder.jpg', style: 'height:50px; width:50px'%>
            <% end %>
            <%= recipe.recipe_name %>
          </a>
      <% end %>
    </div>
