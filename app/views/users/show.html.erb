<!DOCTYPE html>
<html>
  <head>
    <title><%= @user.user_name %></title>
  </head>
  <body>
    <div class="container">
      <div class="page-header">
        <h1>
          <strong><%= @user.user_name %></strong> <small><strong>| Level:</strong> <%= @user.user_level %>
          <strong>| Privileges:</strong> <%= @user.privileges %>
          <strong>| Points:</strong> <%= @user.points %></small>
        </h1>
        <span>
          <% if (current_user && session[:user_id] == current_user.id) || is_admin %>
          <%= link_to 'Edit',edit_user_path(@user)%>
        <% end %>
        </span>
      </div>

      <div>
        <%= image_tag @user.image_url.to_s %>
      </div>

      <!--About section-->
      <div class="row">
        <div class="col-md-12">
          <p>About Me:</p>
          <div class="jumbotron">
            <p><%= simple_format(@user.bio) %></p>
          </div>
        </div>
      </div>


      <!--Display Recipes-->
      <ul class="list-group">
        <% @recipes.each do |recipe|%>
            <li class="list-group-item"><%= recipe.recipe_name %></li>
        <% end %>
        <%= paginate @recipes%>
      </ul>

    </div>
  </body>
</html>

